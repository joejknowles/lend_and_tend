%div.fb_btn_container= button_to 'Join in with Facebook', user_omniauth_authorize_path(:facebook), class: 'btn fb_btn join_inputs', id: 'fb_btn'

%div.join_or= 'Or'

= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|

  %div.input-group.join_inputs
    = f.text_field :name, autofocus: true, class: 'form-control', placeholder: 'Name'
    %span.input-group-addon#basic-addon1
      %span.glyphicon.glyphicon-user

  %div.input-group.join_inputs
    =f.email_field :email, class: 'form-control', placeholder: 'Email', id: 'join_email'
    %span.input-group-addon#basic-addon1
      %span.glyphicon.glyphicon-envelope

  %div.input-group.join_inputs
    = f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: 'Password', id: 'join_password'
    %span.input-group-addon#basic-addon1
      %span.glyphicon.glyphicon-ok

  %div.input-group.join_inputs
    = f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', placeholder: 'Confirm Password', id: 'password_confirmation'
    %span.input-group-addon#basic-addon1
      %span.glyphicon.glyphicon-ok

  %div.actions
    = f.submit "Join in with Email", class: 'btn btn-success join_inputs join_btn'

  %div.join_legals
    By joining you agree to our T&Cs and will receive updates about our mission to make life greener!
