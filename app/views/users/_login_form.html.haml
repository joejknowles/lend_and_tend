%div.fb_btn_container= button_to 'Log in with Facebook', user_omniauth_authorize_path(:facebook), class: 'btn fb_btn join_inputs', id: 'fb_btn'

%div.join_or= 'Or'

= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|

  %div.input-group.join_inputs
    = f.email_field :email, class: 'form-control', placeholder: 'Email', id: 'login_email'
    %span.input-group-addon#basic-addon1
      %span.glyphicon.glyphicon-envelope

  %div.input-group.join_inputs
    = f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: 'Password', id: 'login_password'
    %span.input-group-addon#basic-addon1
      %span.glyphicon.glyphicon-ok

  = f.check_box :remember_me
  = f.label :remember_me

  = f.submit "Log in", class: 'btn btn-success join_inputs join_btn'

  %div.login_forgot_prompt
    = link_to "Forgot your password?", new_password_path(resource_name)
